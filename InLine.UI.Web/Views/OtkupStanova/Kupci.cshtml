  <script type="text/javascript">

      $(document).ready(function () {


          var grid1 = "#" + '@InLine.Model.Data.FieldString.View.Kupac.KupacEntity';

          $(window).bind('resize', function () {
              $(grid1).setGridWidth($(window).width());

          }).trigger('resize');

