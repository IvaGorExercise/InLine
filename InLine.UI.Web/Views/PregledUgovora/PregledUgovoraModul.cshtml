//        $("#navigacija ul.submenu").show().css('display', 'inline-block');
//    });

    $("#navigacija ul").hide();
    $(".navigacijaShow a").first().hide();

    $("#navigacija ul.submenu").show();

    $('#navigacija ul.submenu li').hover(function () {
        $(this).find('ul').show();
    },
    function () {
        $(this).find('ul').hide();
    });

</script>













