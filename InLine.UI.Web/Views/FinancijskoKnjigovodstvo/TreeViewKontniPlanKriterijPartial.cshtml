                    </td>
                }
           </tr>
       }
   }

   else
   {
        <tr>
              @for (int j = 0; j <= @Model.KojiKriterijList.Count - 1; j++)
              {
                  Model.KojiKriterij = @Model.KojiKriterijList.ElementAt(j).ID_Kriterij;   
                    <td class="kriterij" id ="@Model.KojiKriterij" style="vertical-align:top;"> <b>@Model.KojiKriterijList.ElementAt(j).Naziv.ToUpper()</b>
                    @{Html.RenderAction(@AkcijaTreeViewKontniPlanKriterij, Model);}
